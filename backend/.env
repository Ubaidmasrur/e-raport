APP_NAME="E-Raport"
APP_ENV=local
APP_KEY=base64:GENERATED_APP_KEY
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# ================================
# ✅ DATABASE (MySQL)
# ================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=eraport
DB_USERNAME=root
DB_PASSWORD=

# ================================
# ✅ MAIL (GMAIL SMTP / Mailtrap)
# ================================

# Gunakan salah satu:

# ▶ Untuk produksi (GMAIL SMTP):
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=youremail@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@eraport.com
MAIL_FROM_NAME="E-Raport SMA Muhammadiyah 10"

# ▶ Untuk testing lokal (MAILTRAP):
# MAIL_MAILER=smtp
# MAIL_HOST=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_mailtrap_username
# MAIL_PASSWORD=your_mailtrap_password
# MAIL_ENCRYPTION=null
# MAIL_FROM_ADDRESS=admin@eraport.com
# MAIL_FROM_NAME="E-Raport"

# ================================
# ✅ SANCTUM & FRONTEND
# ================================
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost
FRONTEND_URL=http://localhost:3000

# ================================
# ✅ FILE STORAGE & PDF EXPORT
# ================================
FILESYSTEM_DRIVER=public
